<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

  <ImageView
      android:id="@+id/prodImgPath"
      android:layout_width="0dp"
      android:layout_height="200dp"
      android:contentDescription="@string/product_image"
      android:scaleType="centerCrop"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/prodName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Product Name"
      android:textSize="18sp"
      android:textStyle="bold"
      android:paddingTop="8dp"
      app:layout_constraintTop_toBottomOf="@id/prodImgPath"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/prodInfo"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Product Info"
      android:paddingTop="8dp"
      app:layout_constraintTop_toBottomOf="@id/prodName"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/bidPrice"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Bid Price"
      android:paddingTop="8dp"
      app:layout_constraintTop_toBottomOf="@id/prodInfo"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/immediatePrice"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Immediate Price"
      android:paddingTop="8dp"
      app:layout_constraintTop_toBottomOf="@id/bidPrice"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/bidStatus"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Bid Status"
      android:paddingTop="8dp"
      app:layout_constraintTop_toBottomOf="@id/immediatePrice"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/userId"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="User ID"
      android:paddingTop="8dp"
      app:layout_constraintTop_toBottomOf="@id/bidStatus"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/buyerId"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Buyer ID"
      android:paddingTop="8dp"
      app:layout_constraintTop_toBottomOf="@id/userId"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/sellerNickname"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Seller Nickname"
      android:paddingTop="8dp"
      app:layout_constraintTop_toBottomOf="@id/buyerId"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
